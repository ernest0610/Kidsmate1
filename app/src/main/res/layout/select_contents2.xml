<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_buttonLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_dictionary2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Feature_Dictionary"
                android:text="Feature_Dictionary" />

            <Button
                android:id="@+id/button_todaysWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Feature_TodaysWord"
                android:text="Feature_TodaysWord" />

            <Button
                android:id="@+id/button_game_blankGuessing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Game_BlankGuessing"
                android:text="Game_BlankGuessing" />

            <Button
                android:id="@+id/button_game_imageGuessing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Game_ImageGuessing"
                android:text="Game_ImageGuessing" />

            <Button
                android:id="@+id/button_game_wordChain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Game_WordChain"
                android:text="Game_WordChain" />

            <Button
                android:id="@+id/button_test_wordChain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Test_WordChain"
                android:text="Test_WordChain" />

            <Button
                android:id="@+id/button_character_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Character_Info"
                android:text="Character_Info" />

            <Button
                android:id="@+id/button_game_blankGuessing_bossBattle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Game_BlankGuessing_BossBattle"
                android:text="Game_BlankGuessing_BossBattle" />

            <Button
                android:id="@+id/button_game_imageGuessing_bossBattle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Game_ImageGuessing_BossBattle"
                android:text="Game_ImageGuessing_BossBattle" />

            <Button
                android:id="@+id/button_game_wordChain_bossBattle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Game_WordChain_BossBattle"
                android:text="Game_WordChain_BossBattle" />

            <Button
                android:id="@+id/button_Layout_Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Layout_Test"
                android:text="TEST_LAYOUT" />

            <Button
                android:id="@+id/button_game_imageGuessing_testView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clicked_Game_ImageGuessing_TestView"
                android:text="game_imageGuessing_testView" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>