<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_dictionary2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Feature_Dictionary"
                    android:text="사전" />

                <Button
                    android:id="@+id/button_todaysWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Feature_TodaysWord"
                    android:text="오늘의 단어" />

                <Button
                    android:id="@+id/button_character_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Character_Info"
                    android:text="캐릭터 정보" />

                <Button
                    android:id="@+id/button_test_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Test_Menu"
                    android:text="테스트 기능" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_game_imageGuessing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Game_ImageGuessing"
                    android:text="그림 맞추기" />

                <Button
                    android:id="@+id/button_game_blankGuessing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Game_BlankGuessing"
                    android:text="빈칸 맞추기" />

                <Button
                    android:id="@+id/button_game_wordChain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Game_WordChain"
                    android:text="끝말잇기" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_game_imageGuessing_bossBattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Game_ImageGuessing_BossBattle"
                    android:text="그림 맞추기 보스전" />

                <Button
                    android:id="@+id/button_game_blankGuessing_bossBattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Game_BlankGuessing_BossBattle"
                    android:text="빈칸 맞추기 보스전" />

                <Button
                    android:id="@+id/button_game_wordChain_bossBattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicked_Game_WordChain_BossBattle"
                    android:text="끝말잇기 보스전" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>